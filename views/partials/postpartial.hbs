<div class="post-partial-container">
    <div class="post-card">
        <div class="post-category">
            {{!-- <h5>{{this.category}}</h5> --}}
            <img src="{{categoryImage this.category}}" alt="Category Image">
        </div>
        <div class="post-title">
            <h5>{{this.title}}</h5>
        </div>
        <div class="post-description">
            <p>Description: {{this.description}}</p>
            <div class="post-img">
                <img src="{{this.mediaUrl}}" alt="" />
            </div>
        </div>
        <div class="post-meta">
            <p>Author: {{this.author.username}}</p>
            <p>Created: {{dateFormat this.createdAt "MMM Do YYYY, h:mm a" true}}</p>
        </div>
    </div>
</div>
