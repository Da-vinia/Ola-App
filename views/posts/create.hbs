<div class="create-post-container">
  <h2>Share your surfing adventure...</h2>
  <div class="post-form">
    <form action="/post-create" method="POST" enctype="multipart/form-data" >
        <div class="category-options">
          <h3>Choose a category*:</h3>
          <input type="radio" id="sell-rent" name="category" value="sell/rent" style="color:#003CC8">
          <label for="sell-rent">sell/rent</label>
          <img src="images/board-icon.png" alt="board icon">
          <input type="radio" id="tips" name="category" value="tips" style="color:#0CE2DB">
          <label for="tips">tips</label>
          <img src="images/tips-icon.png" alt="palmtree icon">
          <input type="radio" id="meetup" name="category" value="meetup" style="color:#45CFDD">
          <label for="meetup">meetup</label>
          <img src="images/meetup-icon.png" alt="palmtree icon">
        </div>
        <div class="post-content">
          <p>Title*:</p>
          <input type="text" name="title" placeholder="sunrise surf session..."/>
          <p>Description:</p>
          <textarea type="textarea" name="description"> </textarea>
        </div>
        <div class="file-upload">
          <label>Add media:
            <input type="file" name="post-file-upload"/>
          </label>
          {{!-- <label for="file-upload">upload your file</label>
          <input type="file" name="post-file-upload"/> --}}
        </div>
        <div class="submit-cancel">
          <button type="submit">create</button>
          <a href="/profile">cancel</a>
        </div>
    </form>
  </div>
  {{#if errorMessage}}
      <p class="error">ðŸ™€ {{errorMessage}}</p>
    {{/if}}
</div>